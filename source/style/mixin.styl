@import 'constant' 

//------------------------------------------------------------------------------
// Browser compatibility mixin

vendor-prefix(property, args)
  -webkit-{property} args
  -moz-{property} args
  {property} args

transition()
  vendor-prefix('transition', arguments)

animation()
  vendor-prefix('animation', arguments)

transform()
  vendor-prefix('transform', arguments)

transform-origin()
  vendor-prefix('transform-origin', arguments)
  
perspective()
  vendor-prefix('perspective', arguments)

box-sizing()
  vendor-prefix('box-sizing', arguments)

user-select()
  vendor-prefix('user-select', arguments)

cursor(value)
  cursor s('url(../image/mouse-%s.png)', value) 7 1, none

selection()
  ::-moz-selection
    {block}
  ::-webkit-selection
    {block}
  ::selection
    {block}

//------------------------------------------------------------------------------
// Common styles

// apply on current rule background and border for an alert
applyAlertSkin()
  color alertColor
  text-shadow 1px 1px 0 black
  padding 1em
  background url(../image/alert-background.png) repeat
  box-shadow 0 0 6px 1px alertColor inset
  border 1px solid alertColor
  border-radius 5px

// apply on current rule border-image for a mini panel
applyMiniPanelSkin()
  border 2px solid transparent
  border-image-source url('../image/scores.png')
  border-image-slice 50% 50
  border-image-width 100% 60px
  border-image-repeat repeat
  background-clip content-box
  background-color #A7B59E
  padding 5px 25px 